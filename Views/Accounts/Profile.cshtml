@{
    ViewData["Title"] = "Profile";
}

<div class="row">
    <div class="col-4 offset-4">
        <h1 class="display-4 border-bottom text-center pb-2">@ViewData["Title"]</h1>
    </div>
</div>

<div class="row mt-4">
    <div class="col-6 offset-6 my-3">
         <div class="mb-4">
             <div asp-validation-summary="All" class="text-danger" small></div>
        </div>

    </div>
    <div class="col-6">
       <form method="post" asp-action="ProfileChangeImage" enctype="multipart/form-data">
           <div class="text-center mb-3">
               <img src="~/Uploads/@ViewData["ProfileImage"]" width="256" class="img-thumbnail rounded-circle" />
           </div>
           <div class="form-group mb-3">
               <label class="form-label small" >Profile Image</label>
           <input type="file" name="file" class="form-control" accept=".jpg,.jpeg,.png" />
           <div class="text-center mt-3">
                <button class="btn btn-secondary" type="submit" ><i class="fa-solid fa-floppy-disk me-2">Save</i></button>
           </div>
           </div>
           
          
       </form>
    </div>
    <div class="col-6">
       
             <form method="post" asp-action="ProfileChangeFullName" >
                 <div class="form-group">
                     <label class="form-label small ">Name Surname</label>
        <div class="input-group mb-3">     
               <input type="text" name="fullname" class="form-control" placeholder="Hamza Furkan Eryılmaz" value="@ViewData["FullName"]">
            <button class="btn btn-outline-secondary" type="submit" ><i class="fa-solid fa-floppy-disk me-2"></i>Save</button>
        </div>
                 </div>
             
            </form>

             <form method="post" asp-action="ProfileChangePassword" >
                 <div class="form-group">
                     <label class="form-label small ">New Password</label>
        <div class="input-group">     
               <input type="password" name="password" class="form-control" placeholder="P@ssWorD!" >
            <button class="btn btn-outline-secondary" type="submit" ><i class="fa-solid fa-floppy-disk me-2"></i>Save</button>
        </div>
                @if (ViewData["result"] != null && ViewData["result"]=="Password Changed!")
                {
                    <span class="text-success small">Password updated!</span>
                }

        
                 </div>

            </form>

            
        
    </div>
</div>

                 